
<p id="notice"><%= notice %></p>

<head>
  <link rel="stylesheet" type="text/css" href="posts.scss">
  <link href="assets/javascripts/js/hover_pack.css" rel="stylesheet">
</head>
<body>
  <div class="header">
    <h1 >みんなの<span style="color:#FF7724;">YABOU.</span></h1>
  </div>
  <div class="main">
    <div class="container">
      <div class="row mt centered">
        <tbody>
          <% @posts.each do |post| %>
             <div class="each_post col-lg-4 centered  bg-white desc" >
               <div id="post_container_index"  class="border border-dark rounded" style="background-color:#FF7724;">
                 <div class="post_title">
                   <h2 class="when"><%= post.title_when %></h2>
                   <h2 class="what"><%= post.title_what %></h2>
                 </div>
                 <div class="post_content">
                   <p class="post_content"><%= post.content %></p>
                 </div>
               </div>
               <div class ="btn" style="display:block;">
                 <tr><%= link_to '詳細', post %></tr>
                 <tr>いいね<i class="fa fa-heart fa-fw " style=""></i></tr>
               </div>
             </div>
            <% end %>
           </tbody>
        </div>
      </div>


      <div class="row mt centered">
        <div class="col-lg-4 col-lg-offset-4">
            <button type="button" class="btn btn-theme btn-lg">VIEW OUR PORTFOLIO</button>
        </div>
      </div><!-- /row -->
    </div><!-- /container -->

